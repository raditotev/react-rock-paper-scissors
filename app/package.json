{
  "name": "rps-react19",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "type-check": "tsc -b",
    "test": "jest --config jest.config.ts --runInBand",
    "docker:build": "docker build -t rock-paper-scissors .",
    "docker:run": "docker run -p 8101:80 rock-paper-scissors",
    "docker:dev": "docker-compose --profile dev up --build",
    "docker:prod": "docker-compose up --build",
    "docker:stop": "docker-compose down",
    "docker:clean": "docker-compose down --rmi all --volumes --remove-orphans"
  },
  "dependencies": {
    "canvas-confetti": "^1.9.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/canvas-confetti": "^1.9.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "jest": "^29.7.0",
    "postcss": "^8.4.45",
    "tailwindcss": "^3.4.14",
    "ts-jest": "^29.3.4",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "vite-tsconfig-paths": "^5.1.2"
  }
}
